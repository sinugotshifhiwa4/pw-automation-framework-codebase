{
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",

  "overrides": [
    {
      "files": ["**/*.spec.ts", "tests/**/*.ts", "e2e/**/*.ts"],
      "options": {
        "printWidth": 120
      }
    }
  ]
}
