{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "lib": ["esnext", "dom"],

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node", "@playwright/test"],

    "noEmit": true,
    "sourceMap": true
  },

  "include": ["src/**/*.ts", "tests/**/*.ts", "fixtures/**/*.ts", "*.spec.ts", "*.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "logs",
    "downloads",
    "playwright-report",
    "test-results",
    "src/testData"
  ]
}
